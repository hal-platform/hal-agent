{
    "name": "hal/hal-agent",
    "description": "Hal Deployment Platform - Job Runner Agent",
    "license": "MIT",
    "authors": [
        { "name": "Steve Kluck",    "email": "steve@kluck.engineering" },
        { "name": "Byron Nagi",     "email": "byro@fastmail.fm" },
        { "name": "James Thomason", "email": "james@jamesthomasonjr.com" }
    ],
    "support": {
        "source": "https://github.com/hal-platform/hal-agent",
        "issues": "https://github.com/hal-platform/hal/issues"
    },

    "autoload": {
        "psr-4": { "Hal\\Agent\\": "src" }
    },

    "autoload-dev": {
        "psr-4": { "Hal\\Agent\\Testing\\": "tests/src" }
    },
    "require": {
        "php-64bit": "~7.1",

        "ext-curl":        "*",
        "ext-pdo":         "*",
        "ext-pdo_mysql":   "*",
        "ext-pdo_sqlite":  "*",
        "ext-sodium":      "~2.0 || ~7.2",
        "ext-zlib":        "*",

        "aws/aws-sdk-php": "~3.50",
        "doctrine/orm":    "~2.6",
        "doctrine/cache":  "~1.6",

        "guzzlehttp/guzzle":            "~6.0",
        "knplabs/github-api":           "~2.8",
        "phpseclib/phpseclib":          "~2.0.11",
        "php-http/guzzle6-adapter":     "~1.1",
        "predis/predis":                "~1.0",
        "psr/log":                      "*",

        "hal/hal-core":                 "dev-deps",

        "ql/mcp-common":                "~2.0",
        "ql/mcp-logger":                "~4.0",

        "symfony/cache":                 "~4.0",
        "symfony/config":                "~4.0",
        "symfony/console":               "~4.0",
        "symfony/debug":                 "~4.0",
        "symfony/dependency-injection":  "~4.0",
        "symfony/dotenv":                "~4.0",
        "symfony/event-dispatcher":      "~4.0",
        "symfony/filesystem":            "~4.0",
        "symfony/finder":                "~4.0",
        "symfony/process":               "~4.0",
        "symfony/proxy-manager-bridge":  "~4.0",
        "symfony/yaml":                  "~4.0"
    },
    "require-dev": {
        "symfony/var-dumper":        "~4.0",

        "overtrue/phplint":          "~1.0",
        "phpstan/phpstan":           "~0.9",
        "squizlabs/php_codesniffer": "~3.0",

        "codedungeon/phpunit-result-printer": "~0.5",
        "mockery/mockery":                    "~1.0",
        "phpunit/phpunit":                    "~6.2"

    }
}
