    "require": {
        "aws/aws-sdk-php": "2.7.*",
        "doctrine/orm": "~2.5",
        "doctrine/cache": ">=1.3",
        "guzzlehttp/guzzle": "5.*",
        "knplabs/github-api": "1.2.1",
        "php-64bit": ">=5.4.0",
        "phpseclib/phpseclib": "0.3.9",
        "predis/predis": "~1.0",
        "psr/log": "*",

        "ql/hal-core": "2.7.*",
        "ql/mcp-core": "1.0.*",
        "ql/mcp-logger": "1.2.*",

        "swiftmailer/swiftmailer": "5.2.*",

        "symfony/config": "2.7.*",
        "symfony/console": "2.7.*",
        "symfony/debug": "2.7.*",
        "symfony/dependency-injection": "2.7.*",
        "symfony/event-dispatcher": "2.7.*",
        "symfony/filesystem": "2.7.*",
        "symfony/process": "2.7.*",
        "symfony/yaml": "2.7.*",

        "twig/twig": "~1.15"
    },
    "require-dev": {
        "mockery/mockery": "*",
        "phpunit/phpunit": "*"
    }
