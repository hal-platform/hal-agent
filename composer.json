{
    "name": "ql/hal-agent",
    "description": "HAL9000 Console Application",
    "license": "proprietary",
    "authors": [
        {
            "name": "IT Team Web Core",
            "email": "itteamwebcore@quickenloans.com"
        }
    ],

    "autoload": {
        "psr-4": {
            "QL\\Hal\\Agent\\": "src/",
            "QL\\Hal\\Agent\\Testing\\": "testing/src"
        }
    },

    "repositories": [
        {
