{
    "name": "ql/hal-agent",
    "description": "HAL9000 Console Application",
    "license": "proprietary",
    "authors": [
        { "name": "IT Team Web Core", "email": "itteamwebcore@quickenloans.com" }
    ],
    "autoload": {
        "psr-4": { "QL\\Hal\\Agent\\": "src/", "QL\\Hal\\Agent\\Testing\\": "testing/src" }
    },
    "repositories": [
        { "type": "composer", "url": "http://composer" }
    ],
    "repositories": [
        { "type": "path", "url": "../hal-core" }
    ],

    "require": {
        "php-64bit": ">=5.5.0",

        "ext-curl": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-pdo_sqlite": "*",

        "aws/aws-sdk-php": "~3.2",
        "doctrine/orm": "~2.5",
        "doctrine/cache": ">=1.3",
        "guzzlehttp/guzzle": "5.*",
        "knplabs/github-api": "1.2.1",
        "paragonie/random_compat": "~1.1",
        "phpseclib/phpseclib": "0.3.9",
        "predis/predis": "~1.0",
        "psr/log": "*",
        "swiftmailer/swiftmailer": "5.2.*",
        "twig/twig": "~1.15",

        "ql/hal-core":   "dev-master",

        "ql/mcp-common": "~1.0",
        "ql/mcp-core":   "~1.1",
        "ql/mcp-logger": "~2.0",

        "symfony/config":                "~2.7",
        "symfony/console":               "~2.7",
        "symfony/debug":                 "~2.7",
        "symfony/dependency-injection":  "~2.7",
        "symfony/event-dispatcher":      "~2.7",
        "symfony/filesystem":            "~2.7",
        "symfony/process":               "~2.7",
        "symfony/yaml":                  "~2.7"
    },
    "require-dev": {
        "mockery/mockery": "*",
        "phpunit/phpunit": "*"
    }
}
