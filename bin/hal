namespace QL\Hal\Agent\Bootstrap;

use Psr\Log\LoggerInterface;
use QL\Hal\Agent\Application\Di;
use Symfony\Component\Debug\ErrorHandler;

$root = __DIR__ . '/..';
require_once $root . '/configuration/bootstrap.php';

$di = Di::getDi($root, 'QL\Hal\Agent\CachedContainer');

$err = ErrorHandler::register();
$err->setDefaultLogger($di->get('mcp.logger'));

$di->get('application')->run();
