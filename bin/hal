#!/usr/bin/env php
<?php

namespace Hal\Agent\Bootstrap;

use Hal\Agent\Application\Di;
use Hal\Agent\CachedContainer;
use Symfony\Component\Debug\ErrorHandler;

$root = __DIR__ . '/..';
require_once $root . '/configuration/bootstrap.php';

$di = Di::getHalDI($root);

$err = ErrorHandler::register();
$err->setDefaultLogger($di->get('logger'));

$di->get('application')->run();
